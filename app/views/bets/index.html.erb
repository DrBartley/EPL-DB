 <table>
  <thead>
    <tr>
      <th>Homescore</th>
      <th>Awayscore</th>
      <th>Homeodds</th>
      <th>Awayodds</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bets.each do |bet| %>
      <tr>
        <td><%= bet.homescore %></td>
        <td><%= bet.awayscore %></td>
        <td><%= bet.homeodds %></td>
        <td><%= bet.awayodds %></td>
        <td><%= link_to 'Show', bet %></td>
        <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
        <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
