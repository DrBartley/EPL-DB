<h1 id="sign-in">Sign up</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="sign-in-label"><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, :class => "form-control" %></div>

  <div class="sign-in-label"><%= f.label :password %><br />
  <%= f.password_field :password, :class => "form-control" %></div>

  <div class="sign-in-label"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :class => "form-control" %></div>
		<br />
  <div><%= f.submit "Sign up", :class => "btn btn-info" %></div>
    <br />
  <br />
<% end %>

<%= render "devise/shared/links" %>
