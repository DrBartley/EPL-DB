<h1 id="sign-in">Sign in</h1>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="sign-in-label"><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true, :class => "form-control" %></div>

  <div class="sign-in-label"><%= f.label :password %>

  <%= f.password_field :password, :class => "form-control" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="remember-me-label"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "btn btn-success" %></div>
  <br />
  <br />
<% end %>

<%= render "devise/shared/links" %>
